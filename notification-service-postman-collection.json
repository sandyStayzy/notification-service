            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/notifications/batch",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "notifications", "batch"]
            },
            "description": "Send notifications to a larger batch of users with custom processing settings"
