    {
      "name": "Batch Notifications",
      "item": [
        {
          "name": "Send Batch Notification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userIds\": [1, 2, 3, 4, 5],\n  \"title\": \"System Maintenance Notice\",\n  \"content\": \"Our system will be under maintenance from 2:00 AM to 4:00 AM EST. Please plan accordingly.\",\n  \"channelType\": \"EMAIL\",\n  \"priority\": \"HIGH\",\n  \"scheduledAt\": \"2025-09-07T16:56:51\",\n  \"metadata\": {\n    \"maintenanceId\": \"maint_2025_001\",\n    \"affectedServices\": [\"api\", \"web\", \"mobile\"],\n    \"estimatedDuration\": \"2 hours\"\n  },\n  \"batchSettings\": {\n    \"batchSize\": 50,\n    \"delayBetweenBatches\": 1000,\n    \"parallelProcessing\": true,\n    \"continueOnError\": true\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/notifications/batch",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "notifications", "batch"]
            },
            "description": "Send notifications to multiple users with batch processing"
          }
        },
